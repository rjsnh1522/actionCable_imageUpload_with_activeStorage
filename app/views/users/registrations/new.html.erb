<div class="col-md-8 col-md-offset-2">
  
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class: "form-horizontal","data-parsley-validate" => true})do |f| %>
  <div class="form-group">
    <%= f.label :email,class:"col-lg-2 control-label" %><br />
    <div class="col-lg-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control","data-parsley-required"=>true,"data-parsley-type"=>"email"   %>
      <p class="error email_error"></p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password,class:"col-lg-2 control-label"  %>
    <div class="col-lg-10">
     <%= f.password_field :password, autocomplete: "off",class:"form-control","data-parsley-required"=>true,"data-parsley-minlength"=>"6" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :password_confirmation,class:"col-lg-2 control-label"  %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control","data-parsley-required"=>true,"data-parsley-minlength"=>"6","data-parsley-equalto"=>"#user_password" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "Sign up",class:"btn btn-primary submitReg" %>
    </div>
  </div>


<% end %>
  <div class="center-block center-text col-lg-10 col-lg-offset-2">
      <p><%=link_to "Already signed up ? Login", new_user_session_path%></p>
  </div>

</div>



